{
  "name": "@blueprint-diagrams/canvas",
  "version": "0.1.0",
  "description": "A React canvas component for blueprint diagrams",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
